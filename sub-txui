    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // تنظیم دکمه ایمپورت براساس نوع دستگاه
            const button = document.getElementById('import-button');
            const subUrl = "<%= subUrl %>";
    
            let href = subUrl;
            const ua = navigator.userAgent.toLowerCase();
    
            if (/android/.test(ua)) {
                href = `v2rayng://install-config?url=${encodeURIComponent(subUrl)}`;
            } else if (/iphone|ipad|ipod/.test(ua)) {
                href = `streisand://install-config?url=${encodeURIComponent(subUrl)}`;
            }
    
            button.setAttribute('href', href);
            
            // محاسبه و نمایش نوار پیشرفت
            const totalBytes = <%= totalByte %>;
            const usedBytes = <%= uploadByte %> + <%= downloadByte %>;
            let percentage = 0;
            
            if (totalBytes > 0) {
                percentage = Math.min(Math.round((usedBytes / totalBytes) * 100), 100);
            }
            
            document.getElementById('progress-bar').style.width = percentage + "%";
            
            // محاسبه روزهای باقی‌مانده
            const expireTimestamp = <%= expire %>;
            const currentTime = Date.now();
            
            if (expireTimestamp === 0) {
                document.getElementById('remaining-days').textContent = "بدون محدودیت";
                document.getElementById('remaining-traffic').style.display = "none";
            } else if (expireTimestamp > currentTime) {
                const remainingDays = Math.floor((expireTimestamp - currentTime) / (1000 * 60 * 60 * 24));
                document.getElementById('remaining-days').textContent = remainingDays;
            } else {
                document.getElementById('remaining-days').textContent = "منقضی شده";
                document.getElementById('remaining-traffic').style.display = "none";
                document.getElementById('status-label').className = 'status-label expired';
                document.getElementById('status-label').innerText = 'منقضی شده';
            }
            
            // تنظیم وضعیت نمایشی ا
